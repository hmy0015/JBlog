<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="category">

	<!-- 회원가입 시 자동생성 -->
	<insert id="insertCategory" parameterType="com.javaex.vo.CategoryVo">
		<![CDATA[
			INSERT INTO category VALUES(#{cateNo}, #{id}, #{cateName}, #{description}, sysdate)
       	]]>
	</insert>
	
	<!-- 카테고리 정보 받아오기 (블로그 메인에서 사용) -->
	<select id="getCategoryInfo" parameterType="String" resultType="com.javaex.vo.CategoryVo">
		<![CDATA[
			SELECT  cateno,
			        id,
			        cateName
			FROM category
			where id =  #{id}
			order by cateno desc
       	]]>
	</select>
	
</mapper>
